# Environment Configuration
# Copy this file to .env.local and modify the values as needed

# Backend API Configuration
NEXT_PUBLIC_API_BASE_URL=https://localhost:7016/api

# For production, change to your actual API URL:
# NEXT_PUBLIC_API_BASE_URL=https://your-api-domain.com/api

# ISR Revalidation Secret
# This secret token is used to protect the /api/revalidate endpoint
# Must match the RevalidateSecret in backend appsettings.json
NEXT_PUBLIC_BACKEND_JWT_SECRET=your-secret-token-here-change-in-production

# OAuth Configuration (if needed)
# NEXT_PUBLIC_GOOGLE_CLIENT_ID=your_google_client_id
# NEXT_PUBLIC_FACEBOOK_APP_ID=your_facebook_app_id
